<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rTitleTv"
            android:text="Title"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/rImageView"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/dreamload"
            android:layout_height="200dp" />


        <TextView
            android:id="@+id/rDescriptionTv"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="this will be the description of the post. if the description text contains more than the three lines it will be trimed to three lines and three dots willl be displayed at the end of 3rd line."
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />






    </LinearLayout>






</android.support.v7.widget.CardView>